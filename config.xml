<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
 version="1.0.0.0" id="TimeSince2012Apoc">

  <name>Time since the 2012 apocalypse</name>

  <author>Alex Guilmoto</author>

  <description>
       An app that tells you how many days have passed since the end of the mayan calendar when a button is pressed.
  </description>
  
 <feature id="blackberry.app" version="1.0.0.0" required="true"/>
 <feature id="blackberry.invoke" version="1.0.0.0" required="true"/>
 <feature id="blackberry.connection" />
  
  <icon rim:hover="false" src="res/icon/blackberry/114by114_00005.png" />
  <icon rim:hover="true" src="res/icon/blackberry/114by114_00005.png" />
  
  <rim:permissions>
    <rim:permit></rim:permit>
  </rim:permissions>

  <rim:loadingScreen backgroundColor="#CFCFCF"
                     foregroundImage="res/screen/blackberry/1024by768_00005.png"
       onFirstLaunch="true">
    <rim:transitionEffect type="fadeOut" />
  </rim:loadingScreen>

  <content src="whatdayisit.html" />

</widget>